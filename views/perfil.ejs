<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil de Usuario</title>
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="../css/accesibilidad.css">
    <script src="../scripts/accesibilidad.js"></script>
    
</head>
<body>

    <%- include('./navbar', { usuario: user }) %>

    <div class="container mt-5 pt-5">
        <div id="editForm" class="card mt-3">
            <div class="card-body">
                <h1 class="card-title">Editar Perfil</h1>
                <form action="/updateProfile" method="POST">
                    <div class="form-group">
                        <label for="nombre">Nombre:</label>
                        <input type="text" class="form-control" id="nombre" name="nombre" value="<%= user.nombre %>">
                    </div>
                    <div class="form-group">
                        <label for="correo">Correo:</label>
                        <input type="email" class="form-control" id="correo" name="correo" value="<%= user.correo %>" readonly>
                    </div>
                    <div class="form-group">
                        <label for="telefono">Tel√©fono:</label>
                        <input type="text" class="form-control" id="telefono" name="telefono" value="<%= user.telefono %>">
                    </div>
                    <div class="form-group">
                        <label for="facultad">Facultad:</label>
                        <input type="text" class="form-control" id="facultad" name="facultad" value="<%= user.facultad %>">
                    </div>
                    <div class="form-group">
                        <label for="rol">Rol:</label>
                        <input type="text" class="form-control" id="rol" name="rol" value="<%= user.rol %>" readonly>
                    </div>
                    <button type="submit" class="btn btn-success">Guardar</button>
                    <button type="button" class="btn btn-secondary" onclick="toggleEdit()">Cancelar</button>
                </form>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-body">
                <h2 class="card-title">Historial de Eventos</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Nombre del Evento</th>
                            <th>Fecha</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% historial.forEach(evento => { %>
                            <tr>
                                <td><%= evento.titulo %></td>
                                <td><%= evento.fecha %></td>
                                <td><%= evento.estado %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>