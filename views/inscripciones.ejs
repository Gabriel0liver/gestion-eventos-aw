<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Eventos</title>
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="../css/index.css">
    <link rel="stylesheet" href="../css/accesibilidad.css">
    <script src="../scripts/accesibilidad.js"></script>

</head>

<%- include('./navbar', { usuario: usuario }) %>

<div class="container mt-5 pt-5">
    <h1>Lista de Inscripciones</h1>
    <a href="/eventos" class="btn btn-primary mb-3">Volver a Eventos</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Usuario</th>
                <th>Evento</th>
                <th>Estado</th>
                <th>Fecha de Inscripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody id="inscripciones-list">
            <!-- Aquí se insertarán las inscripciones mediante AJAX -->
        </tbody>
    </table>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        // Obtener y mostrar las inscripciones
        function cargarInscripciones() {
            $.ajax({
                url: '/inscripciones',
                method: 'GET',
                success: function (data) {
                    const inscripciones = data.inscripciones;
                    const usuario = data.usuario;
                    let html = '';

                    inscripciones.forEach(inscripcion => {
                        html += `
                            <tr>
                                <td>${inscripcion.id}</td>
                                <td>${inscripcion.id_usuario}</td>
                                <td>${inscripcion.id_evento}</td>
                                <td>${inscripcion.estado}</td>
                                <td>${inscripcion.fecha_inscripcion}</td>
                                <td>
                                    <button class="btn btn-info btn-sm" onclick="mostrarDetalles(${inscripcion.id})">Detalles</button>
                                    <button class="btn btn-danger btn-sm" onclick="eliminarInscripcion(${inscripcion.id})">Eliminar</button>
                                </td>
                            </tr>
                        `;
                    });

                    $('#inscripciones-list').html(html);
                },
                error: function (err) {
                    console.error('Error al cargar inscripciones:', err);
                }
            });
        }

        // Llamar a cargar inscripciones al cargar la página
        cargarInscripciones();

        // Función para eliminar inscripción
        window.eliminarInscripcion = function (id) {
            if (confirm('¿Estás seguro de que quieres eliminar esta inscripción?')) {
                $.ajax({
                    url: `/inscripciones/eliminar/${id}`,
                    method: 'DELETE',
                    success: function () {
                        alert('Inscripción eliminada correctamente.');
                        cargarInscripciones();
                    },
                    error: function (err) {
                        console.error('Error al eliminar inscripción:', err);
                        alert('Error al eliminar inscripción.');
                    }
                });
            }
        };

        // Función para mostrar detalles de una inscripción
        window.mostrarDetalles = function (id) {
            $.ajax({
                url: `/inscripciones/detalle/${id}`,
                method: 'GET',
                success: function (data) {
                    alert(`Detalles de la inscripción:\nID: ${data.inscripcion.id}\nUsuario: ${data.inscripcion.id_usuario}\nEvento: ${data.inscripcion.id_evento}\nEstado: ${data.inscripcion.estado}\nFecha: ${data.inscripcion.fecha_inscripcion}`);
                },
                error: function (err) {
                    console.error('Error al obtener detalles:', err);
                    alert('Error al obtener detalles de la inscripción.');
                }
            });
        };
    });
</script>
