<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mis Inscripciones</title>
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <script src="./scripts/accesibilidad.js"></script>
</head>
<body>
    
    <%- include('./navbar', { usuario: usuario }) %>

    <div class="container mt-5 pt-5">
        <h1 class="text-center mb-4">Mis Inscripciones</h1>

        <div class="row">
            <% if (eventos.length === 0) { %>
                <p class="text-center">No tienes inscripciones activas.</p>
            <% } else { %>
                <% eventos.forEach(evento => { %>
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <img src="<%= evento.foto ? '/fotos/' + evento.foto : '/fotos/default.jpg' %>" class="card-img-top" alt="Imagen del evento">
                            <div class="card-body">
                                <h5 class="card-title"><%= evento.titulo %></h5>
                                <p class="card-text"><%= evento.descripcion %></p>
                                <p><strong>Fecha:</strong> <%= evento.fecha %></p>
                                <p><strong>Ubicaci√≥n:</strong> <%= evento.ubicacion %></p>
                                <p><strong>Tipo:</strong> <%= evento.tipo %></p>

                                <button class="btn btn-danger btn-desinscribirse" data-id="<%= evento.id %>" data-inscripcion="<%= evento.inscripcionId %>">Desinscribirse</button>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            $(document).on('click', '.btn-desinscribirse', function () {

                const eventoId = $(this).data('id');
                $.ajax({
                    url: '/eventos/desinscribir',
                    type: 'POST',
                    data: { eventoId: eventoId },
                    success: function (response) {
                        location.reload();
                    },
                    error: function (error) {
                        alert('Error al desinscribirse');
                    }
                });
            });
        });
    </script>
</body>
</html>
