<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mis Inscripciones</title>
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="../css/accesibilidad.css">
    <script src="../scripts/accesibilidad.js"></script>

</head>
<body>
    
    <%- include('./navbar', { usuario: usuario }) %>

    <div class="container mt-5 pt-5">
        <h1 class="text-center mb-4">Mis Inscripciones</h1>

        <div class="row">
            <% if (eventos.length === 0) { %>
                <p class="text-center">No tienes inscripciones activas.</p>
            <% } else { %>
                <% eventos.forEach(evento => { %>
                    <div class="col-md-4 mb-3" id="evento-<%= evento.id %>">
                        <%- include('./partials/evento', { evento }) %>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>

    
    <script>
        $(document).ready(function () {
            $(document).on('click', '.btn-desinscribirse', function () {

                const eventoId = $(this).data('id');
                $.ajax({
                    url: '/eventos/desinscribir',
                    type: 'POST',
                    data: { eventoId: eventoId },
                    success: function (response) {
                        $(`#evento-${eventoId}`).html(response);
                    },
                    error: function (error) {
                        alert('Error al desinscribirse');
                    }
                });
            });
        });
    </script>
</body>
</html>
