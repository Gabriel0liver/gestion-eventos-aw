<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Eventos Actuales</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body>
    
    <%- include('./navbar', { usuario: usuario }) %>
    
    <div class="container mt-4">
        <h1 class="text-center mb-4">Eventos Actuales</h1>
        <div class="row">
            <% eventos.forEach(evento => { %>
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><%= evento.titulo %></h5>
                            <p class="card-text"><%= evento.descripcion %></p>
                            <p><strong>Fecha:</strong> <%= evento.fecha %></p>
                            <p><strong>Ubicación:</strong> <%= evento.ubicacion %></p>
                            <% if (usuario && usuario.rol === "organizador") { %>
                                <a href="/eventos/editar/<%= evento.id %>" class="btn btn-primary">Editar</a>
                                <button class="btn btn-danger btn-eliminar" data-id="<%= evento.id %>">Eliminar</button>
                            <% } else if (usuario) { %>
                                <button class="btn btn-success btn-inscribirse" data-id="<%= evento.id %>">Inscribirse</button>
                            <% } else { %>
                                <p class="text-muted">Inicia sesión para interactuar</p>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".btn-eliminar").on("click", function () {
                const eventoId = $(this).data("id");
                if (confirm("¿Estás seguro de que deseas eliminar este evento?")) {
                    $.ajax({
                        url: `/eventos/eliminar/${eventoId}`,
                        type: "DELETE",
                        success: function (response) {
                            alert("Evento eliminado con éxito");
                            location.reload();
                        },
                        error: function () {
                            alert("Error al eliminar el evento");
                        }
                    });
                }
            });

            $(".btn-inscribirse").on("click", function () {
                const eventoId = $(this).data("id");
                $.ajax({
                    url: `/eventos/inscribirse/${eventoId}`,
                    type: "POST",
                    success: function (response) {
                        alert("Te has inscrito con éxito");
                    },
                    error: function () {
                        alert("Error al inscribirse al evento");
                    }
                });
            });
        });
    </script>
</body>
</html>
